{
  "version": 8,
  "name": "Rich v1",
  "sources": {
    "vector-tiles": {
      "type": "vector",
      "tiles": ["https://idf-tiles.idf-maps-007.workers.dev/tiles/{z}/{x}/{y}.pbf"],
      "maxzoom": 14
    }
  },
  "sprite": "https://idf-tiles.idf-maps-007.workers.dev/sprite",
  "glyphs": "https://idf-tiles.idf-maps-007.workers.dev/fonts/{fontstack}/{range}.pbf",
  "layers": [
    { "id": "background", "type": "background",
      "paint": { "background-color": "#f7f7f7" } },

    { "id": "water", "type": "fill",
      "source": "vector-tiles", "source-layer": "water",
      "paint": { "fill-color": "#bcd7ff" } },

    { "id": "park", "type": "fill",
      "source": "vector-tiles", "source-layer": "landuse",
      "filter": ["in", "class", "park", "cemetery", "pitch"],
      "paint": { "fill-color": "#d9f0c7" } },

    { "id": "building", "type": "fill",
      "source": "vector-tiles", "source-layer": "building",
      "paint": {
        "fill-color": "#e6e6e6",
        "fill-outline-color": "#d4d4d4"
      } },

    { "id": "road-motorway-casing", "type": "line",
      "source": "vector-tiles", "source-layer": "road",
      "filter": ["==", "class", "motorway"],
      "paint": { "line-color": "#c8c8c8", "line-width": 4 } },

    { "id": "road-motorway", "type": "line",
      "source": "vector-tiles", "source-layer": "road",
      "filter": ["==", "class", "motorway"],
      "paint": { "line-color": "#f3a15f", "line-width": 2.5 } },

    { "id": "road-primary", "type": "line",
      "source": "vector-tiles", "source-layer": "road",
      "filter": ["==", "class", "primary"],
      "paint": { "line-color": "#ffcc66", "line-width": 2 } },

    { "id": "road-secondary", "type": "line",
      "source": "vector-tiles", "source-layer": "road",
      "filter": ["==", "class", "secondary"],
      "paint": { "line-color": "#ffd98a", "line-width": 1.5 } },

    { "id": "road-street", "type": "line",
      "source": "vector-tiles", "source-layer": "road",
      "filter": ["in", "class", "street", "residential", "service"],
      "paint": { "line-color": "#ffffff", "line-width": 1 } },

    { "id": "poi-icons", "type": "symbol",
      "source": "vector-tiles", "source-layer": "poi_label",
      "layout": {
        "icon-image": "poi-15",
        "icon-size": 1,
        "text-field": "{name}",
        "text-size": 11,
        "text-offset": [0, 0.8],
        "text-anchor": "top"
      },
      "paint": {
        "text-color": "#2b2b2b",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      } },

    { "id": "place-labels", "type": "symbol",
      "source": "vector-tiles", "source-layer": "place_label",
      "layout": {
        "text-field": "{name}",
        "text-size": 12
      },
      "paint": {
        "text-color": "#111111",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      } }
  ]
}
